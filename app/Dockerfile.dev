# --- Development Stage ---
FROM oven/bun:1.3.10

WORKDIR /app

# Copy only package files first (better caching)
COPY package.json bun.lock ./

# Install dependencies
RUN bun install --frozen-lockfile

# Copy source code
COPY . .

# Expose API port
EXPOSE 8000

# Start Elysia app in watcher mode (hot reload)
CMD ["bun", "run", "dev"]
