# JWT Configuration
JWT_SECRET=change_this_in_production_minimum_32_characters_long
JWT_REFRESH_SECRET=change_this_in_production_minimum_64_characters_long_secure_refresh_token
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Database (PostgreSQL)
POSTGRES_USER=bunvel_admin
POSTGRES_PASSWORD=change_this_strong_password_in_production_minimum_16_chars
POSTGRES_DB=bunvel

# API 
API_URL=http://localhost:8000
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# Redis
REDIS_URL=redis://valkey:6379

# PostgREST
POSTGREST_URL=http://rest:8001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Security
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Default Project
DEFAULT_ORGANIZATION=Default
DEFAULT_PROJECT=Default

# Studio Configuration
VITE_BUNVEL_STUDIO_URL=http://localhost:3000
VITE_API_URL=http://localhost:8000